<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.linea.rutatolima.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

      <ImageView
	    android:id="@+id/fnd"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:contentDescription="@string/app_name"
	    android:scaleType="fitXY"
	    android:src="@drawable/vb" />   

    </LinearLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:onClick="pasarmapa"
            android:src="@drawable/hda" />
		
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="pasarmapa"
            android:src="@drawable/hdb" />
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="pasarmapa"
            android:src="@drawable/hdc" />
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="pasarmapa"
            android:src="@drawable/hdd" />
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="pasarmapa"
            android:src="@drawable/hde" />
        
    </LinearLayout>

</FrameLayout>