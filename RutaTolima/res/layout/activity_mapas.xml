<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <FrameLayout
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:id="@+id/container_popup"
                android:orientation="vertical"
                android:background="@drawable/fnd"
                android:visibility="invisible"
                android:layout_x="0dp"
                android:layout_y="0dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                >

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/txtab"
                android:textColor="#CCCCCC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button_view_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher"
                android:gravity="center"
                android:text="@string/txtdb"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_x="44dp"
            android:layout_y="214dp"
            android:src="@drawable/common_signin_btn_icon_dark" />

    </AbsoluteLayout>

</RelativeLayout>
